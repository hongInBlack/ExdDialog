<?xml version="1.0" encoding="utf-8"?>
<com.sungrowpower.widget.exdialog.util.MaxHeightLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/exd_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="@string/exd_tip"
            android:textColor="@color/exd_black"
            android:textSize="19sp"/>

        <View
            android:id="@+id/exd_title_line"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/exd_line"/>

        <ListView
            android:id="@+id/exd_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_radius_6"
            android:divider="@color/exd_line"
            android:dividerHeight="1px"
            android:gravity="center"
            android:listSelector="@drawable/dialog_selector_6"
            android:scrollbars="none"/>

    </LinearLayout>

</com.sungrowpower.widget.exdialog.util.MaxHeightLayout>
