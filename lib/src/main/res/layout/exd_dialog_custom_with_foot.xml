<?xml version="1.0" encoding="utf-8"?>
<com.sungrowpower.widget.exdialog.util.MaxHeightLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/custom_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp">

        </FrameLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:background="@color/exd_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/exd_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/dialog_selector"
                android:gravity="center"
                android:minHeight="50dp"
                android:text="@string/exd_cancel"
                android:textColor="@color/exd_dialog_blue"
                android:textSize="17sp"/>

            <View
                android:id="@+id/exd_line_vertical"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/exd_line"/>

            <TextView
                android:id="@+id/exd_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/dialog_selector"
                android:gravity="center"
                android:minHeight="50dp"
                android:text="@string/exd_ok"
                android:textColor="@color/exd_dialog_blue"
                android:textSize="17sp"/>

        </LinearLayout>

    </LinearLayout>

</com.sungrowpower.widget.exdialog.util.MaxHeightLayout>
